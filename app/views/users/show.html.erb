<div class="profile-container">
  <h1><%= @user.display_name %></h1>

  <div class="profile-card">

    <!-- Avatar -->
    <div class="profile-avatar-box">
      <%# Usa o mesmo helper, mas sem o f.file_field %>
      <%= image_tag @user.avatar_or_default, id: "avatar-preview" %>
    </div>

    <!-- Informações Principais -->
    <div class="profile-grid">

      <!-- Campo de Nome de Usuário (Exibição Estática) -->
      <div class="profile-field">
        <label>Nome de Usuário</label>
        <p class="profile-static-text"><%= @user.username %></p>
      </div>

      <!-- Campo de Data de Nascimento (Exibição Estática) -->
      <div class="profile-field">
        <label>Data de Nascimento</label>
        <p class="profile-static-text"><%= @user.birthdate.present? ? @user.birthdate.strftime("%d/%m/%Y") : "Não informado" %></p>
      </div>

      <!-- Campo de Gênero (Exibição Estática) -->
      <div class="profile-field">
        <label>Gênero</label>
        <p class="profile-static-text"><%= @user.gender.present? ? @user.gender.capitalize : "Não informado" %></p>
      </div>

      <!-- Campo de Interesse (Exibição Estática) -->
      <div class="profile-field">
        <label>Interessado em</label>
        <p class="profile-static-text"><%= @user.interested_in.present? ? @user.interested_in.capitalize : "Não informado" %></p>
      </div>

      <!-- Biografia (Exibição Estática) -->
      <div class="profile-field" style="grid-column: 1 / -1;">
        <label>Biografia</label>
        <p class="profile-static-text"><%= @user.bio.present? ? @user.bio : "Sem biografia." %></p>
      </div>

      <!-- HOBBIES (Exibição Estática) -->
      <div class="hobbies-box">
        <label>Hobbys</label>
        <div class="hobbies-list">
          <% @user.hobbies_list.each do |hobby| %>
            <span class="hobby-tag"><%= hobby.capitalize %></span>
          <% end %>
          <% if @user.hobbies_list.empty? %>
            <p class="text-sm text-gray-500">Nenhum hobby listado.</p>
          <% end %>
        </div>
      </div>

    </div> <!-- /profile-grid -->

    <!-- Botão de Ação (Ex: Dar Like ou Enviar Mensagem) -->
    <%# Você pode adicionar aqui um botão para interagir com o usuário %>
    <%# Exemplo: <%= link_to "Dar Like", likes_path(liked_id: @user.id), method: :post, class: "like-button" %>

  </div> <!-- /profile-card -->

  <!-- Seção do Álbum de Fotos (REUTILIZANDO O CÓDIGO ANTERIOR) -->
  <% if @user.album_photos.attached? %>
    <div class="profile-card" style="margin-top: 30px;">
      <h2>Álbum de Fotos (<%= @user.album_photos.count %>)</h2>

      <div class="photo-album-grid">
        <% @user.album_photos.each do |photo| %>
          <div class="album-photo-item">
            <%= image_tag photo, class: "album-photo-image" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div> <!-- /profile-container -->
