<h2 class="text-center mt-3">Descubra pessoas pr√≥ximas</h2>

<div class="map-container">
  <div id="map" style="width: 100%; height: 500px; border-radius: 10px;"></div>

  <!-- Sidebar din√¢mica de usu√°rios pr√≥ximos -->
  <div id="nearby-users" class="nearby-users">
    <h4>üë• Usu√°rios pr√≥ximos</h4>
    <ul id="users-list"></ul>
  </div>
</div>

<!-- Popup fixo -->
<div id="user-popup" class="user-popup hidden">
  <div class="popup-content">
    <div class="user-info">
      <img id="popup-avatar" src="" alt="Avatar" class="avatar">
      <div>
        <h3 id="popup-username"></h3>
        <p id="popup-location"></p>
        <p id="popup-distance" class="distance"></p>
      </div>
    </div>

    <div class="popup-actions">
      <button id="like-btn" class="btn like">‚ù§Ô∏è Curtir</button>
      <button id="message-btn" class="btn message">üí¨ Mensagem</button>
      <button id="goto-btn" class="btn go">üö∂‚Äç‚ôÇÔ∏è Vou at√© voc√™ / Venha at√© mim</button>
    </div>
  </div>
</div>

<script type="module" src="<%= asset_path 'map.js' %>"></script>

<script>
  // üîπ Quando o map.js terminar de renderizar os usu√°rios, ele pode emitir um evento customizado
  // que traz o array de usu√°rios reais carregados no mapa.
  // Este script escuta esse evento e atualiza a sidebar automaticamente.

  document.addEventListener('usersLoaded', (event) => {
    const users = event.detail; // Array de usu√°rios reais (ex: [{id, username, avatar_url, distance, ...}, ...])
    const list = document.getElementById('users-list');
    list.innerHTML = '';

    users.forEach(user => {
      const li = document.createElement('li');
      li.innerHTML = `
        <img src="${user.avatar_url || 'https://i.pravatar.cc/50'}" alt="${user.username}">
        <span>${user.username} (${user.distance || '‚Äî'})</span>
      `;
      li.addEventListener('click', () => {
        // Opcional: simula clique no marcador do mapa
        const markerClick = new CustomEvent('focusUserOnMap', { detail: user });
        document.dispatchEvent(markerClick);
      });
      list.appendChild(li);
    });
  });
</script>

